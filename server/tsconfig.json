
{
    "compilerOptions": {
      "module": "commonjs",
      "strict": true,
      "baseUrl": "./",
      "outDir": "build",
      "removeComments": true,
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "target": "es6",
      "emitDecoratorMetadata": true,
      "moduleResolution": "node",
      "importHelpers": true,
      "resolveJsonModule": true,
      "sourceMap": true,
      "types": [
        "node",
        "jest"
      ],
      "typeRoots": [
        "node_modules/@types"
      ]
    },
    "include": [
      "./src/**/*.ts",
      "./tests/**/*.ts"
    ],
    "exclude": [
      "./src/public/",
    ]
  }